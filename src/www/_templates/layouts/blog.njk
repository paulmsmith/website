{% extends "./master.njk" %}
{% block content %}
<div class="o-constrain">
  <div class="o-layout">
    {% if (title or heading) and not supressHeading %}
      <div class="o-layout__item u-1/1@large">
        <h1 class="c-page-heading {{ 'c-page-heading--with-subheading' if subheading }}">{{ heading | d(title) }}</h1>
        {% if subheading %}
          <p class="c-page-subheading">{{ subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
    <div class="o-layout__item u-2/3@large">
        {% block primarycontent %}{% endblock %}
    </div>
    <div class="o-layout__item u-1/3@large">
      {% if blogroll and not hide_blogroll %}
      <div class="c-aside c-aside--ribbed">
          <h3 class="o-heading heading--aside">Blogroll</h3>
          <ul class="list list--links list--links-aside">
            {% for blogitem in blogroll | sortBy('text') %}
            <li><a href="{{ blogitem.url }}">{{ blogitem.text }}</a></li>
            {% endfor %}
          </ul>
      </div>
      {% endif %}
      <!-- /.c-aside -->
      {% block secondarycontent %}
        <div class="c-aside c-aside--dashed-concaved">
          <p>This website is still under development.</p>
        </div>
      {% endblock %}
    </div>
  </div>
</div>
{% endblock %}
