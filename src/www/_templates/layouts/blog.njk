{% extends "./master.njk" %}
{% block content %}
<div class="o-constrain">
  <div class="o-layout">
    <div class="o-layout__item u-2/3@medium">
        {% block primarycontent %}{% endblock %}
    </div>
    <div class="o-layout__item u-1/3@medium">
      <div class="c-aside">
        {% if blogroll %}
          <h4 class="o-heading heading--aside">Blogroll</h4>
          <ul class="list list--links list--links-aside">
            {% for blogitem in blogroll %}
            <li><a href="{{ blogitem.url }}">{{ blogitem.text }}</a></li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      <!-- /.c-aside -->
      {% block secondarycontent %}{% endblock %}
    </div>
  </div>
</div>
{% endblock %}
