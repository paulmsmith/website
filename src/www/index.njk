{% extends "./_templates/layouts/blog.njk" %}
{% block primarycontent %}

  <div class="prose">
    <div class="o-media c-pane c-pane--a">
      <p>Hello! You've reached the home of Paul Smith, a designer based in rainy Manchester, UK.</p>
    </div>
  </div>

  <div class="prose">
    <h2>Writings and notes</h2>
  </div>
  <!-- /.prose -->

  <ul class="list list--entries">
  {%- for item in collections.post -%}
    <li class="list__item">
      <time>{{ item.date | readableDate }}</time>
      <a href="{{ item.url }}">{{ item.data.title }}</a>
    </li>
  {%- endfor -%}
  </ul>

{% endblock %}

{% block secondarycontent %}
  <div class="c-aside c-aside--dashed-concaved">
    <p>This website is still under development.</p>
  </div>
{% endblock %}
